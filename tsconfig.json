{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "module": "es6",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "jsx": "react",
    "noImplicitAny": true,
    "allowJs": false,
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,

    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
